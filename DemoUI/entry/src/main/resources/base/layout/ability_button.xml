<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">

    <!--    1. 文本按钮
            2. 图标按钮
            3. 图标和文本共同组成的按钮
    -->
    <Button
        ohos:id="$+id:button_1"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:background_element="#f0f"
        ohos:bottom_margin="15vp"
        ohos:element_left="$media:icon"
        ohos:left_margin="15vp"
        ohos:left_padding="8vp"
        ohos:right_padding="8vp"
        ohos:text="button"
        ohos:text_size="27fp"
        />


    <!--    按照按钮的形状，按钮可以分为：普通按钮，椭圆按钮，胶囊按钮，圆形按钮等。-->
    <Button
        ohos:height="50vp"
        ohos:width="150vp"
        ohos:background_element="$graphic:color_blue_element"
        ohos:bottom_margin="15vp"
        ohos:left_margin="15vp"
        ohos:left_padding="8vp"
        ohos:right_padding="8vp"
        ohos:text="button"
        ohos:text_size="27fp"
        />

    <Button
        ohos:height="50vp"
        ohos:width="150vp"
        ohos:background_element="$graphic:oval_button_element"
        ohos:bottom_margin="15vp"
        ohos:element_left="$media:icon"
        ohos:left_margin="15vp"
        ohos:left_padding="8vp"
        ohos:right_padding="8vp"
        ohos:text="button"
        ohos:text_size="27fp"
        />

    <Button
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:background_element="$graphic:capsule_button_element"
        ohos:bottom_margin="15vp"
        ohos:left_margin="15vp"
        ohos:left_padding="15vp"
        ohos:right_padding="15vp"
        ohos:text="button"
        ohos:text_size="27fp"
        />

    <Button
        ohos:height="50vp"
        ohos:width="50vp"
        ohos:background_element="$graphic:circle_button_element"
        ohos:bottom_margin="15vp"
        ohos:left_margin="15vp"
        ohos:left_padding="15vp"
        ohos:right_padding="15vp"
        ohos:text="+"
        ohos:text_size="27fp"
        />
</DirectionalLayout>