<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">

    <!--    TextField提供了一种文本输入框。-->
    <TextField
        ohos:id="$+id:text_field_1"
        ohos:height="match_content"
        ohos:margin="10vp"
        ohos:width="match_parent"
        ohos:hint="please input..."
        ohos:text_color="#0ff"
        ohos:hint_color="#f00"
        ohos:text_size="50"/>


    <TextField
        ohos:id="$+id:text_field_2"
        ohos:height="match_content"
        ohos:margin="10vp"
        ohos:basement="#000099"
        ohos:width="match_parent"
        ohos:hint="please input..."
        ohos:text_color="#0ff"
        ohos:hint_color="#f00"
        ohos:text_size="50"/>
</DirectionalLayout>